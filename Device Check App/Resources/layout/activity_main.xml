<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        
        
        <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal">
        
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:id="@+id/userName"
        /> 

        </LinearLayout>
        
     
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Device Name"
        android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:id="@+id/deviceName"
        />

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Status"
        android:id="@+id/deviceStatus"
       android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Borrower Name"
        android:id="@+id/borrower"
       android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:inputType="text"/>

      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Team Name"
        android:id="@+id/borrowerTeam"
       android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:inputType="text"
        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pick date to return"
        android:id="@+id/returnDate"
       android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:inputType="text"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Reason"
        android:id="@+id/reason"
       android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        android:inputType="text"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text= "Borrow Date"
        android:id="@+id/borrowedDate"
       android:textSize="@dimen/abc_action_bar_icon_vertical_padding_material"
        />



       <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal">
        
            <Button  
            android:id="@+id/btnborrow"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:text="Borrow"  
            /> 
       

    </LinearLayout>

     <LinearLayout  
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"  
        android:orientation="horizontal">
        
            <Button  
            android:id="@+id/returnDevice"  
            android:layout_width="match_parent"  
            android:layout_height="wrap_content"  
            android:text="Return"  
            />    

    </LinearLayout>



    <ListView  
        android:minWidth="25px"  
        android:minHeight="25px"  
        android:layout_width="match_parent"  
        android:layout_height="match_parent"  
        android:id="@+id/listView"/>  

</LinearLayout>
