<?xml version="1.0" encoding="utf-8"?>
    
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#515F8E"
    
    android:orientation="vertical">



    <TextView
        android:text="Sign up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:textSize="25sp"
        android:textColor="#fff"
        android:id="@+id/textViewSignup" />

    <TextView
        android:text="Enter the details below to create your account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:gravity="center"
        android:layout_marginVertical="10dp"
         android:textSize="15sp"
        android:textColor="#fff"
        android:id="@+id/textViewCreate" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F9FA"
        android:inputType="textEmailAddress" 
        android:hint="Enter your email"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:id="@+id/editTextEmail"
        /> 


       <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F9FA"
        android:inputType="textPassword" 
        android:hint="Enter  password"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:id="@+id/editTextPass"
        />
     <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F9FA"
        android:inputType="textPassword" 
        android:hint="Confirm password"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:id="@+id/editTextConfirmPass"
        />
        

    <RadioGroup
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:layout_marginHorizontal="20dp"
          android:layout_marginTop="13dp"
          android:id="@+id/radioGroup1"
          >
      <RadioButton
          android:id="@+id/radio_user"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="USER"
          android:textColor="@android:color/white"
          />
      </RadioGroup>

 
     <Button
        android:text="Sign up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minWidth="250dp"
        android:layout_gravity="center"
        android:id="@+id/buttonSignup" />
    <TextView
        android:text="Already have an account? Log In"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:gravity="center"
        android:id="@+id/textViewAlreadyAcc" />
   
   

</LinearLayout>
