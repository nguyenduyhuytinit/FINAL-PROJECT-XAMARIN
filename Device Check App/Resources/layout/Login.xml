<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#515F8E"
    >
    <ImageView
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imgIcon"
    />

   

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp"
        android:background="#F7F9FA"
        android:inputType="textEmailAddress"
        android:hint="Enter_email"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:id="@+id/editTextLogin"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F7F9FA"
        android:inputType="textPassword"
        android:hint="Enter_pass"
        android:layout_marginHorizontal="20dp"
        android:padding="10dp"
        android:id="@+id/editTextPass"
        />


    <TextView
        android:text="Forgot password?"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:textColor="#fff"
        android:id="@+id/textViewForgotPass" />
    <Button
        android:text="Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:minWidth="250dp"
        android:layout_gravity="center"
        android:onClick="LoginButton_Clicked"
        android:id="@+id/buttonLogin1" />
    <TextView
        android:text="Or login with Google account"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#fff"
        android:gravity="center"
        android:id="@+id/textViewChooseLogin" />
    <Button
        android:text="Google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:id="@+id/buttonFacebook" />
    <TextView
        android:text="Don't have an account? Sign up "
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#fff"
        android:gravity="center"
        android:autoLink="all"
        android:id="@+id/textViewSignup" />


</LinearLayout>
